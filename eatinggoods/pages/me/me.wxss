.bj{
  background: #f5f5f5;
  width: 100vw;
  height: 100vh;
}
/*登录信息*/
.login{
  padding: 6.6667vw 4vw;
	color:#fff;
  display: flex;
  flex-flow: row;
  background: #fda305;
}
.login_left{
  width: 16vw;
  height: 16vw;
}
.login_left>image{
  width: 100%;
  height: 100%;
}
.login_right{
    display:flex;
    flex-flow: column; 
    overflow: hidden;
    margin-left: 4.8vw;
    flex-grow: 1;
}
.login_right>text{
      white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    display: flex;
    align-items: center;
    font-family: PingFang SC,Helvetica Neue,Arial,sans-serif;
}
.login_phone>image{
  width: 2.86667vw;
  height: 3.9333vw;
}
.login_phone>text{
  font-size: 3.3vw;
}
.login_detailed{
    /* width: 2.666667vw;
    height: 5.6vw; */
    display: flex;
    align-items: center;
}
.login_detailed>navigator{
  width:2vw;
  height:2vw;
  border-left:2px solid #fff;
  border-top:2px solid #fff;
  transform: rotate(135deg);
  position: absolute;
  z-index: 20;
  right: 5vw;
}
/*我的财产*/
.property{
  height: 22.4vw;
  border-bottom: 1px solid #ddd;
  background: #fff;
  display: flex;
  flex-flow: row;
  align-items: center;
}
.property>view{
  width: 33.3%;
  height: 22.4vw;
  text-align: center;
  border-right: 1px solid #ddd;
}
.property>view:nth-of-type(1)>navigator>view>text{
  color: rgb(0,152,251);
}
.property>view:nth-of-type(2)>navigator>view>text{
  color: rgb(255,95,62);
}
.property>view:nth-of-type(3)>navigator>view>text{
      color: rgb(106,194,11);
}
.property>view>navigator>view:nth-of-type(1){
    padding:4vw 0 1.5vw;
    font-size: 42rpx;
    font-weight: 700;
}
.property>view>navigator>view:nth-of-type(2){
    margin-top: 1.33vw;
    font-size: 3.733vw;
    line-height: 3.733vw;
    color: #666;
    font-weight: 700;
}
/*我的地址、金币商城等*/
.address{
  border-bottom: 1px solid #ddd;
  border-top: 1px solid #ddd;
  margin-top: 2.6667vw;
  line-height: 4.53333vw;
  background: #fff;
  display: flex;
  flex-flow: row;
  align-items: center;
  position:relative;
}
.address_left{
  margin-left: 2.666667vw;
  margin-right: 2.666667vw; 
  width: 8vw;
  height: 8vw;
}
.address_left>image{
  width:100%;
  height: 100%;
}
.address_right{
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 25rpx 30rpx 25rpx 0;
  font-size: 30rpx;
  color: #666;
}
.address_right>image{
  width: 5vw;
  height: 5vw;
  position: absolute;
  right:40rpx;
}