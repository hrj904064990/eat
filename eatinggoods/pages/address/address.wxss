
.address>view{
  padding:30rpx 40rpx;
  position: relative;
  border-bottom: 0.133333vw solid #e0e0e0;
}
.address_top>text:nth-of-type(1){
  font-weight: 700;
  color:#000;
  font-size:32rpx;
}
.address_top>text:nth-of-type(2){
  color: #666;
  font-size:32rpx;
  margin:0 7rpx;
}
.address_top>text:nth-of-type(3){
  color: #666;
  font-size:38rpx;

}
.address_bottom{
  display: flex;
  align-items: center;
}
.address_bottom>text{
   color: #666;
  font-size:28rpx;
  display: -webkit-box;
  width: 70vw;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.address_icon{
  position: absolute;
  right: 30rpx;
}
.address_icon>image{
  width:50rpx;
  height:50rpx;
  margin: 0 5rpx;
}
.icon{
  position: absolute;
  top: 30rpx;
  right: 39rpx;
}

.editAddress{
  width: 100%;
  height: 100%;
  position: absolute;
  display: flex;
  justify-content: center;
  background: #fff;
  z-index: 1000;
  top: 0;
  background-image:linear-gradient(0deg,#f5f5f5,#f5f5f5 65%,hsla(0,0%,96%,.3) 75%,hsla(0,0%,96%,0)),linear-gradient(270deg,#f7851a,#f7851a);
}
.editList{
  width: 95%;
  height: 96vh;
  background: #fff;
  position: fixed;
  margin: 30rpx 0 0 0; 
}
.editList>view{
  color:#666;
}
.editList_top{
  height: 40rpx;
  background: #f7851a;
  display: flex;
  justify-content: center;
}
.editList>.editList_top>text{
  font-size:40rpx;
   color: #fff;
}
.editList_top>view{
  width:3vw;
  height:3vw;
  display:block;
  border-left:2px solid #fff;
  border-top:2px solid #fff;
  transform: rotate(-45deg);
  -webkit-transform: rotate(-45deg);
  position: absolute;
  z-index: 20;
  left: 5vw;
}
.editList>view{
  display: flex;
  flex-flow: row;
  padding: 20rpx 20rpx;
  margin: 20rpx 20rpx;
  align-items: center;
}
.editList>view>text{
  color:#666;
  font-size: 40rpx;
  width: 25vw;
}
.editList>view>input{
  width: 50vw;
  border:1px solid #666;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
}
.editList>textarea{
  width: 90%;
  border: 1px solid #666;
  border-radius: 10rpx;
  padding: 5rpx 15rpx;
  margin: 0 auto;
  color: #666;
}
.editList>button{
  width: 95%;
  margin: 15rpx auto 0;
  background: #f7851a;
  color: #fff;
}